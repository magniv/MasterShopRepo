@model MasterShop.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center m-3">
    <div class="col-md-6 p-4 rounded app-background">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h4 class="text-center">Order - Edit</h4>
                <hr />
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="AccountId" class="control-label"></label>
                        <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                        <span asp-validation-for="AccountId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderTime" class="control-label"></label>
                        <input asp-for="OrderTime" class="form-control" />
                        <span asp-validation-for="OrderTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SumToPay" class="control-label"></label>
                        <input asp-for="SumToPay" class="form-control" />
                        <span asp-validation-for="SumToPay" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <a asp-controller="Home" asp-action="AdminPage">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
