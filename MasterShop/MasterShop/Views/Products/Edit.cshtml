@model MasterShop.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center m-3">
    <div class="col-md-6 p-4 rounded app-background">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h4 class="text-center">Product - Edit</h4>
                <hr />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Image" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="text-center">
                        @{
                            var base64 = Convert.ToBase64String(Model.Image);
                            var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                        }
                        <img src="@imgSrc" alt="" height="160" width="240">
                    </div>
                    <br />
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <a asp-controller="Home" asp-action="AdminPage">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
