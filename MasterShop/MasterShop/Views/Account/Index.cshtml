@model IEnumerable<MasterShop.Models.Account>

@{ ViewData["Title"] = "Account List"; }

@section Styles{
    <link rel="stylesheet" href="~/lib/jquery-ui/css/jquery-ui.css">
}


<div class="rounded shadow-md p-5 app-background mb-5">
    <div class="container">
        <h2>Accounts list</h2>
        <div class="col-md-5 pl-0 mb-2">
            <input class="form-control mr-2" id="account_search" placeholder="Enter account name" />
        </div>
        <p>
            <a asp-controller="Account" asp-action="Create"><i class="fas fa-plus"></i> Create New</a>
        </p>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Type)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="table-container">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td id="search-column">
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td>
                                        <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-controller="Account" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-controller="Account" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/search.js" defer></script>