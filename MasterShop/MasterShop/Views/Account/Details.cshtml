@model MasterShop.Models.Account

@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center m-3">
    <div class="col-md-6 p-4 rounded app-background">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h4 class="text-center">Account - Details</h4>
                <hr />
            </div>
        </div>
        <dl class="row justify-content-center">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Email):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Password):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ConfirmPassword):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ConfirmPassword)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FullName):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Gender):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Type):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </dl>
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-controller="Home" asp-action="AdminPage">Back to List</a>
            </div>
        </div>
    </div>
</div>
