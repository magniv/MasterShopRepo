@model IEnumerable<MasterShop.Models.Product>

@{ ViewData["Title"] = "Products We Have"; }


@section Styles{
    <link rel="stylesheet" href="~/lib/jquery-ui/css/jquery-ui.css">
}

<div class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
                <div class="table-responsive">
                    <h2>Products We Have</h2>
                    <p>
                        <a>Create New</a>
                    </p>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">
                                    Product Image
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        <div class="show-product fas fa-eye" data-image="@Html.DisplayFor(modelItem => item.ImageUrl)" data-name="@Html.DisplayFor(modelItem => item.Name)"></div>
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td scope="row">
                                        <div asp-controller="Categories" asp-action="Details" asp-route-id="@item.CategoryId">
                                            @Html.DisplayFor(modelItem => item.Category.Name)
                                        </div>
                                    </td>
                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="productName" class="modal-title" id="exampleModalToggleLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="product-image align-items-center">
                    <img id="productImage" alt="" height="160" width="240">
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/load-to-modal.js" defer></script>

